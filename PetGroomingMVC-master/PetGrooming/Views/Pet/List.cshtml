@model List<PetGrooming.Models.Pet>

@{
    ViewBag.Title = "List";
}

<h2>List of Pets</h2>

@{
    foreach (var Pet in Model)
    {
        <div>
            <span><a href="/Pet/Show/@Pet.PetID">@Pet.PetName</a></span>
            <span>@Pet.Species.Name</span>
            <span>@Pet.Weight kg</span>
        </div>
    }
}
<input type="button" onclick="window.location.href='/Pet/Add';" value="Add A New Pet">